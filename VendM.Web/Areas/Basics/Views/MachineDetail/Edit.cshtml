
@model VendM.Model.DataModelDto.MachineDetailDto

@{
    ViewBag.Title = "Edit";
}

    <script>
        /*自定义validate*/
        rules = {
            MachineId: {
                required: true,
                min: 0
            },
            PassageNumber: {
                required: true
            }
            ,
            ProductId: {
                required: true,
                min: 0
            }
        },
            messages = {
                MachineId: {
                    required: "请输入機器編號",
                    min: "请输入機器編號"
                },
                PassageNumber: {
                    required: "请输入您的通道編號"
                }
                ,
                ProductId: {
                    required: "商品編號不存在",
                    min: "商品編號不存在"
                }
            };
        $(document).ready(function () {
            // 在键盘按下并释放及提交后验证提交表单
            $("form").validate({
                rules: rules,
                messages: messages
            });
        });
    </script>
@using (Html.BeginForm())
{
<div style="margin: 15px; border: 1px">
    <div class="form-group">
        <label for="name">機器編號</label>
        @Html.DropDownListFor(m => m.MachineId, ViewData["MachineNoList"] as List<SelectListItem>, new { @class = "form-control", placeholder = "機器編號", required = "required" })
    </div>
    <div class="form-group">
        <label for="name">通道編號</label>
        @Html.TextBoxFor(m => m.PassageNumber, new { @class = "form-control", placeholder = "通道編號", required = "required" })
    </div>
    <div class="form-group">
        <label for="name">商品名稱</label>
        @Html.DropDownListFor(m => m.ProductId, ViewData["ProductNoList"] as List<SelectListItem>, new { @class = "form-control", placeholder = "商品名稱", required = "required" })
    </div>
    <div>
        <button type="submit" class="btn btn-primary btn-primary-subbtn">提交</button>
    </div>
</div>
}





