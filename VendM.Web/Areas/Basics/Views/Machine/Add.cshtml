
@{
    ViewBag.Title = "Add";
}
@model VendM.Model.DataModelDto.MachineDto
@using (Html.BeginForm("Add", "Machine", FormMethod.Post))
{
    <div style="margin: 15px; border: 1px">
        <div class="form-group">
            <label for="name">Market名称</label>
            @Html.DropDownListFor(m => m.StoreId, ViewData["StoreList"] as List<SelectListItem>, new { @class = "form-control", placeholder = "Market名称", required = "required" })
        </div>
        <div class="form-group">
            <label for="name">机器名称</label>
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "机器名称", required = "required" })
        </div>
        <div class="form-group">
            <label for="name">编号</label>
            @Html.TextBoxFor(m => m.MachineNo, new { @class = "form-control", placeholder = "编号", required = "required" })
        </div>
        <div class="form-group">
            <label for="name">密码</label>
            @Html.TextBoxFor(m => m.Password, new { @class = "form-control", placeholder = "密码", required = "required" })
        </div>
        <div class="form-group">
            <label for="name">机器狀態</label>
            @Html.DropDownListFor(m => m.Status, (IEnumerable<SelectListItem>)ViewBag.StatusType, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="name">地址</label>
            @Html.TextBoxFor(m => m.Address, new { @class = "form-control", placeholder = "地址", required = "required" })
        </div>
        <div>
            <div>
                <button type="submit" class="btn btn-primary btn-primary-subbtn">提交</button>
            </div>
        </div>
    </div>
}
<script>

    /*自定义validate*/
    var rules = {
        Name: {
            required: true
        },
        Code: {
            required: true,
            remote: "/Machine/ValidateName"
        },
        ProfileId: "required",
        Address: "required",
        StoreId: {
            required: true,
            min: 0
        }
    },
        messages = {
            Name: {
                required: "请输入機器名稱"
            },
            Code: {
                required: "请输入機器编号",
                remote: "已存在機器编号"
            },
            ProfileId: {
                required: "请输入ProfileId"
            },
            Address: {
                required: "请输入地址"
            }, StoreId: {
                required: "请选择Market",
                min: "请选择Market"
            }
        };
    $(document).ready(function () {
      
        // 在键盘按下并释放及提交后验证提交表单
        $("form").validate({
            rules: rules,
            messages: messages
        });
    });
</script>