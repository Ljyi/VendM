
@{
    ViewBag.Title = "SetFault";
}


@model VendM.Model.DataModelDto.MachineDto

<script type="text/javascript">
    

    $(document).ready(function () {
        $("#FaultTime").datetimepicker({
            format: 'yyyy-mm-dd hh: ii'
        }).on('changeDate', function (ev) {
            $(this).datetimepicker('hide');
        });

        $("#HandleTime").datetimepicker({
            format: 'yyyy-mm-dd hh: ii'
        }).on('changeDate', function (ev) {
            $(this).datetimepicker('hide');
        });
        $("form").validate();
    });

</script>
@using (Html.BeginForm())
{
    <div style="margin: 15px; border: 1px">
        <div class="form-group">
            <label for="name">故障类型</label>
            @Html.DropDownListFor(m => m.FaultType, (IEnumerable<SelectListItem>)ViewBag.FaultType, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="name">故障时间</label>
            @Html.TextBoxFor(m => m.FaultTime, new { @class = "form-control", placeholder = "故障时间"})
        </div>
        <div class="form-group">
            <label for="name">处理时间</label>
            @Html.TextBoxFor(m => m.HandleTime, new { @class = "form-control", placeholder = "处理时间" })
        </div>
        <div>
            <button type="submit" class="btn btn-primary btn-primary-subbtn">提交</button>
        </div>
    </div>
}





